{
  // === Formatting ===
  "editor.formatOnSave": true,                // auto-format on save
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Prettier as default formatter
  "editor.tabSize": 2,                        // indentation size
  "editor.insertSpaces": true,                // use spaces instead of tabs

  // === File hygiene ===
  "files.trimTrailingWhitespace": true,       // remove trailing spaces
  "files.insertFinalNewline": true,           // ensure file ends with newline
  "files.encoding": "utf8",                   // force UTF-8 encoding
  "files.eol": "\n",                          // enforce LF line endings

  // === Visual aids ===
  "editor.rulers": [80, 100],                 // vertical rulers at 80 and 100 chars

  // === Markdown specific ===
  "[markdown]": {
    "editor.wordWrap": "bounded",             // wrap text in markdown
    "editor.wordWrapColumn": 100              // wrap at column 100
  },

  // === Markdown linting ===
  "markdownlint.config": {
    "MD013": false,   // disable line-length rule
    "MD024": false,   // allow duplicate headings
    "MD033": false    // allow inline HTML
  },

  // === Git integration ===
  "git.confirmSync": false,                   // disable confirmation dialog on sync
  "git.autofetch": true,                      // enable automatic fetch from remotes

  // === Search exclusions ===
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true
  },

  // === File explorer exclusions ===
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  }
}
